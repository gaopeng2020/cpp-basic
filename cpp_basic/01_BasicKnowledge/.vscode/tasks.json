{
    "version": "2.0.0",
    "tasks": [
        // Task 1：生成build文件夹
        {
            "type": "shell", // 这里决定了task的类型，shell类型就是在命令行里运行command的命令，
            "label": "mkdir_build", // task的名字
            "command": "mkdir", // 需要被运行的命令
            "args": [
                "-p", //如果已经存在则忽略 linux
                "build"
            ], // 传递给command的参数
            "options": {
                "cwd": "${workspaceFolder}",
            }
        },
        {
            "type": "shell",
            "label": "cmake",
            "command": "cmake",
            "args": [
                // "-G", //avalibale for windows
                // "MinGW Makefiles", //avalibale for windows
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
        },
        {
            "type": "shell",
            "label": "make",
            "command": "make",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
        },
        {
            "type": "shell",
            "label": "cmake_General_Build_Task",
            "dependsOrder": "sequence",
            "dependsOn": [
                "mkdir_build",
                "cmake",
                "make"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}